#include "biblioteca.h"

float IngresarNumero(){
	float numero;

	scanf("%f", &numero);
while(numero <=0){
	printf("Error , numero no puede ser cero o negativo. reigrese por favor \n");
	scanf("%f", &numero);
}
	return numero;
}





float DescTarjetaDevito(float z , float x){

	float respuesta;
	float totalPrecio = z*x;
	respuesta =( totalPrecio*10)/100;

	return respuesta;
}
float DescTarjetaDevito(float y , float x){

	float respuesta;
	float totalPrecio = y*x;
	respuesta =( totalPrecio*10)/100;

	return respuesta;
}
float InteresTC(float z){

	float respuesta;


	respuesta = (z*25)/100;

	return respuesta;
}
float InteresTC(float y){

	float respuesta;


	respuesta = (y*25)/100;

	return respuesta;
}
long ValorBitcoin(long z){
	 long respuesta;
	 long bitcoin;
	 bitcoin = 4778869.90;

	 respuesta = z / bitcoin;

	 return respuesta;
}

long ValorBitcoin(long y){
	 long respuesta;
	 long bitcoin;
	 bitcoin = 4778869.90;

	 respuesta = y / bitcoin;

	 return respuesta;
}

float PrecioKmtrs(float num , float x){

	 float respuesta;


	 respuesta = num / x;

	 return respuesta;
}



