#include <stdio.h>
#include <stdlib.h>
#include "biblioteca.h"

int main(void) {

int opcion;
float x;
float y;
float z;
float rtaDescAero;
float rtaDescLatam;






	setbuf(stdout, NULL);

	do{

		printf("\n-----------------------------------------\n");
		printf("    Menu    \n");

		printf("1. Ingresar Kilómetros: ( km ) \n");
		printf("2. Ingresar Precio de Vuelos: (Aerolíneas, Latam)\n");
		printf("3. Calcular todos los costos: \n");
		printf("4. Informar Resultados \n");
		printf("5. Carga forzada de datos \n");
		printf("6. Salir \n");
		printf("\n-------------------------------------------\n");

		scanf("%i" , &opcion);
		switch(opcion){
		case 1:
			printf("Ingrese km: ");
			x = IngresarNumero();
			break;

		case 2:
			printf("- Precio vuelo Aerolíneas: \n");
			y = IngresarNumero();
			printf("- Precio vuelo Latam: \n");
			z = IngresarNumero();
			break;
		case 3:
			if(x != 0 && y !=0 && z != 0){
				printf("a) Tarjeta de ebito (descuento 10 %c)" , 37);

			rtaDescLatam= DescTarjetaDevitoLatam(z, x);

			printf("b) Tarjeta de credito (interés 25%) \n");

			printf("c) Bitcoin (1BTC -> 4606954.55 Pesos Argentinos) \n");
			printf("d) Mostrar precio por km (precio unitario) \n");
			printf("e) Mostrar diferencia de precio ingresada (Latam - Aerolíneas) \n");
			}else {
				printf("No hay datos cargados.\n");
			}
			break;
		case 4:
			printf("Latam\n");
			printf("a) Precio con tarjeta de debito: %f \n" ,rtaDescLatam);
			break;
		case 6:
			printf(" Gracias ");
			break;
		}

	}while(opcion != 6);


	return EXIT_SUCCESS;
}
